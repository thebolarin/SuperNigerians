<!doctype html>
<html lang="en">

<head>
    <%- include('../templates/head') %>

    <link rel="stylesheet" href="/css/password.css">

    <title>Super Nigerians</title>
</head>

<body>
    <%- include('../templates/sidebar') %>

    <main id="main" style="padding-top: 0;">
        <div class="row" style="margin: 0;">
            <div class="col-md-7 d-none d-md-flex resetPasswordImg"></div>
            <div class="col-md-5 p-4 d-flex flex-column justify-content-center align-items-center">
                <h3 class="my-4 text-center prj green-text">Reset Password</h3>
                <% if (errorMessage) { %>
                <div role="alert" class="alert alert-danger user-message user-message--error"><%= errorMessage %></div>
                <% }if (success && success.length > 0) { %>
                <div role="alert" class="alert alert-success user-message"><%= success %></div>
                <% } %>
                <form class="p-5" action="/reset/password" method="POST">
                    <div class="form-group">
                        <label for="password">Password</label>
                        <input type="password" name="password" class="form-control prj-form-control py-4" id="password"
                            placeholder="Password" autocomplete="new-password"
                            pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[\W]).{8,}" minlength="8" required="">

                    </div>
                    <div class="form-group">
                        <label for="password">Confirm Password</label>
                        <input type="password" name="confirm-password" class="form-control prj-form-control py-4"
                            id="password" placeholder="Password" autocomplete="new-password"
                            pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[\W]).{8,}" minlength="8" required="">
                    </div>
                    <input type="hidden" name="token" value="<%= token %>" />
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
                    <div class="text-center">
                        <button type="submit" class="btn btn-success btn-lg my-3">Submit</button>
                    </div>
                    <p class="text-center">Don't have an account? <a href="#">Sign Up</a></p>
                </form>
            </div>
        </div>
    </main>

</body>

</html>