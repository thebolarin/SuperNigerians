<!doctype html>
<html lang="en">

<head>
    <%- include('../templates/head') %>
    <link rel="stylesheet" href="/css/password.css">

    <title>Super Nigerians</title>
</head>

<body>
    <%- include('../templates/sidebar') %>

    <main id="main">
        <div class="row" style="margin: 0;">
            <div class="col-md-6 col-lg-4 mx-auto p-4">
                <h3 class="my-4 text-center prj green-text">Forget Password</h3>
                <% if (errorMessage) { %>
                    <div role="alert" class="alert alert-danger user-message user-message--error"><%= errorMessage %></div>
                <% }if (success && success.length > 0) { %>
                    <div role="alert" class="alert alert-success user-message"><%= success %></div>
                <% } %>
                
                <form class="p-5" action="/recover/password" method="POST">
                    <div class="form-group">
                        <label for="Emai1">Email address</label>
                        <input type="email" class="form-control py-4" id="exampleInputEmail1"
                            aria-describedby="emailHelp" placeholder="e.g oluola@gmail.com" required>
                    </div>
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <div class="text-center">
                        <button type="submit" class="btn btn-success btn-lg my-3">Submit</button>
                    </div>
                    <p class="text-center">Don't have an account? <a href="#">Sign Up</a></p>
                </form>
            </div>
        </div>
    </main>

</body>

</html>